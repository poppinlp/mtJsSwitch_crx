{
	"name":"美团前端调试小助手",
	"version":"0.0.1",
	"manifest_version":2,
	"icons":{
		"16":"icon.png",
		"48":"icon.png",
		"128":"icon.png"
	},
	"description":"方便的对美团各个页面开启jsdebug和phpDebugger",
	"browser_action":{
		"default_title":"美团前端调试小助手",
		"default_icon":"icon.png",
        "default_popup":"popup.html"
	},
	"offline_enabled":false,
    "background":{
        "scripts":[
            "bg.js"
        ]
    },
    "content_scripts":[{
        "matches":[
            "*://*.meituan.com/*"
        ],
        "js":[
            "jquery.js",
            "content.js"
        ],
        "run_at":"document_start"
    }],
	"permissions":[
        "*://*.meituan.com/*",
        "*://*.dev.sankuai.com/*",
        "webRequest",
        "webRequestBlocking",
        "tabs",
        "storage"
	]
}
